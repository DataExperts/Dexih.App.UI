{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "firefox",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "sourceMapPathOverrides": { 
                "webpack:/*": "${webRoot}/*" 
            },
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "${workspaceFolder}/lib/**/*.js"
              ]
        },
        {
            "name": "Launch Firefox 2",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:4200/index.html",
            "pathMappings": [{
                "url": "http://localhost:4200",
                "path": "${workspaceFolder}"
            }, { "url": "webpack:///src/", "path": "${workspaceFolder}/src/" }
            ],
            "log": {
                "consoleLevel": {
                    "PathConversion": "Debug",
                    "default": "Error"
                }
            }
        },
        {
            "name": "Launch localhost with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true,
            "userDataDir": "${workspaceRoot}/chromeOut",
            "windows": {
                "runtimeArgs": [
                    "--kiosk",
                   "--incognito"
                ]
            },
            "skipFiles": [
                "node_modules",
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ]
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach Karma Chrome",
            "address": "localhost",
            "port": 9333,
            "pathMapping": {
              "/": "${workspaceRoot}",
              "/base/": "${workspaceRoot}/"
            },
            "sourceMaps": true,
            "protocol": "inspector",
            "sourceMapPathOverrides": {
                "webpack:///./*":   "${webRoot}/*",
                "webpack:///*":     "*"
            },
            "userDataDir": "${workspaceRoot}/chromeOut",
            "windows": {
                "runtimeArgs": [
                    //"--kiosk",
                    "--incognito"
                ]
            },
            "skipFiles": [
                "node_modules",
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ]
          }
    ]
}